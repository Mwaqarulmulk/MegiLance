# Example environment variables for MegiLance
# Copy this file to .env and fill with real values. Do NOT commit .env with secrets.

# Database (Postgres example)
DATABASE_URL=postgresql+psycopg2://megilance:megilance_pw@db:5432/megilance_db

# Oracle Autonomous Database (example)
# Use either DATABASE_URL for postgres OR the following for Oracle; avoid having both pointing to secrets in repo.
ORACLE_DATABASE_URL=oracle+oracledb://<USER>:<PASSWORD>@<HOST>:<PORT>/<SERVICE_NAME>?wallet_location=/app/oracle-wallet&wallet_password=<WALLET_PASSWORD>
ORACLE_WALLET_LOCATION=/app/oracle-wallet
ORACLE_WALLET_PASSWORD=<WALLET_PASSWORD>

# OCI (Oracle Cloud Infrastructure) - optional
OCI_REGION=<oci-region>
OCI_NAMESPACE=<oci-namespace>
OCI_BUCKET_NAME=<oci-bucket>
OCI_COMPARTMENT_ID=<ocid-compartment>

# JWT
SECRET_KEY=replace_with_long_random_secret
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# App settings
ENVIRONMENT=development
NEXT_PUBLIC_API_URL=http://localhost:8000

# Do not store production secrets in source control. Use a secrets manager or CI/CD variables.
