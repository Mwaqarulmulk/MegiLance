{
  "name": "MegiLance",
  "services": [
    {
      "name": "megilance-frontend",
      "source": {
        "type": "github",
        "repo": "Mwaqarulmulk/MegiLance",
        "branch": "main"
      },
      "build_command": "npm install --legacy-peer-deps --include=dev && npm run build",
      "run_command": "npm start",
      "source_dir": "frontend",
      "envs": [
        {
          "key": "NODE_ENV",
          "value": "production"
        }
      ],
      "http_port": 3000,
      "instance_count": 1,
      "instance_size_slug": "apps-s-1vcpu-0.5gb"
    }
  ]
}
